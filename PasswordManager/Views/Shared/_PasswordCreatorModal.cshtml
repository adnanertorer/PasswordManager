<div class="modal fade" id="createPasswordModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createPasswordModalLabel">Parola Oluşturucu</h5>
                <button type="button" class="close" onclick="closeModal('createPasswordModal')" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6"><input type="text" style="margin-bottom:5px;width:300px;" id="currentPassword" class="form-control" /></div>
                    <div class="col-md-6"> <i class="fa fa-clone" data-bs-toggle="tooltip" data-bs-placement="top" title="Kopyala" style="margin:12px;" onclick="copyText('currentPassword')" aria-hidden="true"></i></div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-3">
                                <input id="passwordLen" style="width:50px;" />
                            </div>
                            <div class="col-md-7" style="margin:7px;">
                                <div id="sliderInput"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="upperCaseCheck">
                            <label class="form-check-label" for="upperCaseCheck">
                                A-Z
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="lowerCaseCheck" checked>
                            <label class="form-check-label" for="lowerCaseCheck">
                                a-z
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="numericCheck" checked>
                            <label class="form-check-label" for="numericCheck">
                                0-9
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="specialCheck" checked>
                            <label class="form-check-label" for="specialCheck">
                                Özel Karakterler
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="closeModal('createPasswordModal')">Kapat</button>
            </div>
        </div>
    </div>
</div>

